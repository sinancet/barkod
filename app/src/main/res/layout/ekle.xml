<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Ekle"
    android:id="@+id/barkod"
    android:background="#fff2edff">

    <EditText
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextname"
        android:layout_gravity="center_horizontal"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView"
        android:layout_alignStart="@+id/imageView2" />

    <EditText
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextsurname"
        android:layout_gravity="center_horizontal"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignEnd="@+id/editTextname"
        android:layout_toEndOf="@+id/textView2"
        android:layout_alignStart="@+id/imageView2" />

    <TextView
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="İsim"
        android:id="@+id/textView"
        android:layout_above="@+id/editTextsurname"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Soyad"
        android:id="@+id/textView2"
        android:layout_above="@+id/editTextmarks"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Göster"
        android:id="@+id/buttonGoster"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.06"
        android:gravity="center_vertical|center|center_horizontal"
        android:layout_marginBottom="54dp"
        android:background="#ffb2d7ff"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ekle"
        android:id="@+id/button"
        android:layout_weight="0.06"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical|center|center_horizontal"
        android:background="#ffb2d7ff"
        android:layout_marginStart="22dp"
        android:layout_below="@+id/editTextmarks"
        android:layout_toEndOf="@+id/buttonGoster" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TC"
        android:id="@+id/textView3"
        android:layout_above="@+id/buttonGoster"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextmarks"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignEnd="@+id/editTextsurname"
        android:layout_toEndOf="@+id/textView"
        android:layout_alignStart="@+id/editTextsurname" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/ekle1"
        android:layout_above="@+id/editTextname"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp" />


</RelativeLayout>
